var $row = $("tr#network_event_task_<%= @network_event_task.id %>");
var task_completed_at = "<%= @network_event_task.completed_at.in_time_zone("Central Time (US & Canada)").to_formatted_s(:long) %>";

// Update table row
$row.find("td.task_completed_at").text(task_completed_at);
$row.find("td.task_mark").find(".task_button").replaceWith("Completed");

// Update task list heading
$("#completed-count").text( parseInt( $("#completed-count").text() ) + 1);
